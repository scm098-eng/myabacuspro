
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper functions to check for roles using custom claims (more performant)
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isTeacher() {
      return request.auth.token.role == 'teacher';
    }

    match /users/{userId} {
      // Allow any authenticated user to read any user's profile.
      allow read: if request.auth != null;
      
      // Allow users to create their own profile document.
      allow create: if isOwner(userId);

      // Allow users to update their own profile, but NOT change their role, status, or subscription.
      // Admins can update anything.
      allow update: if isAdmin() || (isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'subscriptionStatus']));

      // Only admins can delete user documents.
      allow delete: if isAdmin();
      
      // Complex list rules are removed to prevent INTERNAL errors.
      // The broad read rule above will be used for list operations.
      // Client-side queries should be secured by ensuring only authorized users can trigger them.
      allow list: if request.auth != null; 
    }
    
    match /testResults/{resultId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // An owner can read their own test results. Admins and Teachers can read any result.
      allow read, list: if request.auth != null && 
                          (isOwner(resource.data.userId) || isAdmin() || isTeacher());
    }
    
    match /gameProgress/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /subscriptions/{subscriptionId} {
    	allow read, write: if request.auth != null;
    }

    match /processedWebhooks/{eventId} {
      allow read, write: if false; // Only accessible by backend/admin
    }
  }
}
