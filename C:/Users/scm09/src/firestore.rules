
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper function to check for admin role by reading the user's document
    function isAdmin() {
      // This get() call requires a broad read rule on /users/{userId} to work reliably
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check for teacher role
    function isTeacher() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    match /users/{userId} {
      // Allow any authenticated user to read any user's profile.
      allow read: if request.auth != null;
      
      // Allow users to create their own profile document.
      allow create: if isOwner(userId);

      // Allow users to update their own profile, but NOT change their role, status, or subscription.
      // Admins can update anything.
      allow update: if isAdmin() || (isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'subscriptionStatus']));

      // Only admins can delete user documents.
      allow delete: if isAdmin();
      
      // Admins and teachers can list all users. Anyone can list approved teachers for sign up.
      allow list: if (request.auth != null && (isAdmin() || isTeacher())) || (request.query.where[0] == 'role' && request.query.where[1] == '==' && request.query.where[2] == 'teacher' && request.query.where[3] == 'status' && request.query.where[4] == '==' && request.query.where[5] == 'approved');
    }
    
    match /testResults/{resultId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      allow read, list: if request.auth != null && 
                          (isOwner(resource.data.userId) || isAdmin() || isTeacher());
    }
    
    match /gameProgress/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /subscriptions/{subscriptionId} {
    	allow read, write: if request.auth != null;
    }
  }
}
